COPY . /app

# -----------------------------------------------------------------------------
# STAGE 3: Final
# - Image cu·ªëi c√πng, si√™u nh·∫π v√† an to√†n.
# - Ch·ªâ copy nh·ªØng th·ª© c·∫ßn thi·∫øt t·ª´ stage `builder`.
# -----------------------------------------------------------------------------
FROM base as final

